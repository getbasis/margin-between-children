//
// Sets margin between child elements.
//
// @param  int  coefficient
//
// .entry-content {
//   _margin-between-children(1);
// }
//
_margin-between-children(coefficient = 1) {
  > * + * {
    _margin-top(1 * coefficient);
  }

  > h1 {
    _margin-top(_h1-margin-top * coefficient);
    _margin-bottom(_h1-margin-bottom * coefficient);
  }

  > h2 {
    _margin-top(_h2-margin-top * coefficient);
    _margin-bottom(_h2-margin-bottom * coefficient);
  }

  > h3 {
    _margin-top(_h3-margin-top * coefficient);
    _margin-bottom(_h3-margin-bottom * coefficient);
  }

  > h4 {
    _margin-top(_h4-margin-top * coefficient);
    _margin-bottom(_h4-margin-bottom * coefficient);
  }

  > h5 {
    _margin-top(_h5-margin-top * coefficient);
    _margin-bottom(_h5-margin-bottom * coefficient);
  }

  > h6 {
    _margin-top(_h6-margin-top * coefficient);
    _margin-bottom(_h6-margin-bottom * coefficient);
  }

  > :first-child {
    margin-top: 0;
  }
}
