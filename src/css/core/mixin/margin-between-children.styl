//
// Sets margin between child elements.
//
// @param  int  coefficient
//
// .entry-content {
//   _margin-between-children(1);
// }
//
_margin-between-children(coefficient = 1) {
  > * + * {
    _margin-top(1 * coefficient);
  }

  > h1 {
    _margin-top(0);
    _margin-bottom(coefficient);
  }

  > h2 {
    _margin-top(2 * coefficient);
    _margin-bottom(coefficient);
  }

  > h3 {
    _margin-top(1.5 * coefficient);
    _margin-bottom(coefficient);
  }

  > h4 {
    _margin-top(1.25 * coefficient);
    _margin-bottom(coefficient);
  }

  > h5 {
    _margin-top(coefficient);
    _margin-bottom(.5 * coefficient);
  }

  > h6 {
    _margin-top(coefficient);
    _margin-bottom(.5 * coefficient);
  }

  > :first-child {
    margin-top: 0;
  }
}
